<!-- index.ejs -->
<html>
  <head>
    <link rel="stylesheet" href="/styles.css">
    <title>Homepage</title>
  </head>
  <body>
    <div class="title">
      <%= title %>
      [<a href="/new">click here to create a new message</a>]
    </div>

    <div class="messages">
      <% for (let i = 0; i < messages.length; i++) { %>
        <% const messageLink = "/messages/" + i; %>

        <div class="message">
          <div class="user">User: <%= messages[i].user %></div>
          <div class="text">Text: <%= messages[i].text %></div>
          <div class="date">Date: <%= messages[i].added.toLocaleString() %></div>

          <div class="link">
            <a href="<%= messageLink %>">view more</a>
          </div>
        </div>
      <% } %>
    </div>
  </body>
</html>
